{
  "multipart": [
    { "when": { "facing": "north" },
      "apply": { "model": "simplycats:window_perches/window_perch_birch", "uvlock": true }
    },

    { "when": { "facing": "south" },
      "apply": { "model": "simplycats:window_perches/window_perch_birch", "uvlock": true, "y": 180 }
    },

    { "when": { "facing": "east" },
      "apply": { "model": "simplycats:window_perches/window_perch_birch", "uvlock": true, "y": 90 }
    },

    { "when": { "facing": "west" },
      "apply": { "model": "simplycats:window_perches/window_perch_birch", "uvlock": true, "y": 270 }
    }
  ]
}